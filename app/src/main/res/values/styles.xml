        <!--<item name="colorAccent">@color/greencolor</item>    &lt;!&ndash; set your color &ndash;&gt;-->
    <!--</style>-->


    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#28a745</item>
        <item name="colorSwitchThumbNormal">@color/grey_90</item>
        <item name="android:colorForeground">@color/grey_40</item>
    </style>
</resources>
